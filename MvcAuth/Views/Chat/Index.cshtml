@{ 
    ViewBag.Title = "Chat";
}

<h2>Chat Box</h2>
<div class="chat-panel panel panel-default">
    <div class="panel-heading">
        College live chat
        <i class="fa fa-paper-plane fa-fw"></i>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body" id="chat" style="height:250px;">
        <input type="hidden" id="displayname" value="@Session["name"].ToString()" />




        <p id="discussion"></p>
    </div>
    <!-- /.panel-body -->
    <div class="panel-footer">
        <div class="input-group">
            <input id="message" type="text" name="message" class="form-control input-sm" placeholder="Type your message here..." />

            <span class="input-group-btn">
                <input type="button" class="btn btn-warning btn-sm" id="sendmessage" value="Send">

            </span>
        </div>

    </div>

</div>
@Html.ActionLink("Back to Home", "Navigation", "Professor")
@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->

    <script src="~/Scripts/jquery.signalR-2.2.1.min.js"></script>

    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        $(function () {
            // Reference the auto-generated proxy for the hub.
            var chat = $.connection.chatHub;
            var dt = new Date();
            var time = dt.getHours() + ":" + dt.getMinutes() + ":" + dt.getSeconds();
            // Create a function that the hub can call back to display messages.
            chat.client.addNewMessageToPage = function (name, message) {
                // Add the message to the page.
                //$('#discussion').append(time);



                if (name == "std") {

                    $('#discussion').append('<p style="color:green; text-align:left; width:500px"><strong><img = src="https://www.phplivesupport.com/pics/icons/avatars/public/avatar_7.png" title="Student: @Session["StudentName"].ToString()">'
                        + ' </strong> ' + htmlEncode(message) + '</p>');
                    alert("std");
                }
                else if(name=="prof") {

                    $('#discussion').append('<p style="color:blue;text-align:right;"><strong><img = src="https://www.phplivesupport.com/pics/icons/avatars/public/avatar_71.png" title="professor">'
                        + ' </strong> ' + htmlEncode(message) + '</p>');
                }



              /*  $('#discussion').append('<li><strong>' + htmlEncode(name)
                    + '</strong>: ' + htmlEncode(message) + '</li>');*/
            };

            // Get the user name and store it to prepend to messages.

            // Set initial focus to messag★ ToStringe inpu★ ToStringt box.
            $('#message').focus();
            // Start the connection.
            $.connection.hub.start().done(function () {
                $('#sendmessage').click(function () {
                    // Call the Send method on the hub.
                    var value3 = '@Request.RequestContext.HttpContext.Session["type"].ToString()';
                    if (value3 == "std") {


                        chat.server.send("std", $('#message').val());
                        // Clear text box and reset focus for next comment.
                        $('#message').val('').focus();
                    } else if (value3 == "prof") {
                        chat.server.send("prof", $('#message').val());
                        // Clear text box and reset focus for next comment.
                        $('#message').val('').focus();
                    }
                });
            });
        });
        //SessionThis optional function html-encodes messages for display in the page.
        function htmlEncode(value) {
            var encodedValue = $('<div />').text(value).html();
            return encodedValue;
        }
    </script>



}

