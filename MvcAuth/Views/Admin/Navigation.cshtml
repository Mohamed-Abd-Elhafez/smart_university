@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Admin | DashBoard</title>
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="robots" content="all,follow" />
    <link rel="stylesheet" href="~/Content/Admin/vendor/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/Admin/vendor/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,700" />
    <link rel="stylesheet" href="~/Content/Admin/css/style.css" id="theme-stylesheet" />
    <link rel="shortcut icon" href="~/pic/" />
</head>
<body>
    <div class="page">
        <div class="page-content d-flex align-items-stretch">
            <nav class="side-navbar">
                <div class="sidebar-header d-flex align-items-center">
                    <div class="avatar">
                        <a href="@Url.Action("MyProfile","Admin")">
                            <img src="@Url.Action("RenderImage")"
                                 alt="thumbnail"
                                 class="img-fluid rounded-circle" />
                        </a>
                    </div>
                    <div class="title">
                        <h1 class="h4">
                            <a href="@Url.Action("MyProfile","Admin")">
                                @Session["AdminName"].ToString().Split(' ')[0]
                            </a>
                        </h1>
                        <p>
                            <a href="@Url.Action("Navigation","Admin")">
                               Admins
                            </a>
                        <br />
                        </p>
                    </div>
                </div>
                <span class="heading">Main</span>
                <ul class="list-unstyled">
                    <li class="active">
                        <a href="@Url.Action("Navigation","Admin")">
                            <i class="fad fa-home fa-2x"></i>
                            Home
                        </a>
                    </li>

                    <li>
                        <a href="@Url.Action("GetCourses", "Admin")">
                            <i class="fad fa-books fa-2x"></i>
                            Courses
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("AddEvents", "Admin")">
                            <i class="fad fa-calendar-star fa-2x"></i>
                            Events
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Admins", "Admin")">
                            <i class="fad fa-user-chart fa-2x"></i>
                            Admins
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Professors", "Admin")">
                            <i class="fad fa-chalkboard-teacher fa-2x"></i>
                            Professors
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Students", "Admin")">
                            <i class="fad fa-user fa-2x"></i>
                            Students
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("CreateNews", "Admin")">
                            <i class="fad fa-newspaper fa-2x"></i>
                            News
                        </a>
                    </li>
                   
                </ul>            
            </nav>
            <div class="content-inner">
                <header class="page-header bg-dark">
                    <div class="container-fluid">
                        <div class="d-flex align-items-center">
                            <a id="toggle-btn" href="@Url.Action("Navigation","Admin")" class="menu-btn active">
                                <span></span><span></span><span></span>
                            </a>
                            <a href="@Url.Action("Navigation","Admin")"
                               class="navbar-brand d-none d-sm-inline-block text-white">
                                <div class="brand-text d-none d-lg-inline-block">
                                    <span>KFS</span><strong>University</strong>
                                </div>
                                <div class="brand-text d-none d-sm-inline-block d-lg-none">
                                    <strong>FCI</strong>
                                </div>
                            </a>
                            <a href="@Url.Action("LogOff","Account")" class="nav-link ml-auto logout text-light">
                                <span class="d-none d-sm-inline">Logout</span><i class="fad fa-sign-out"></i>
                            </a>
                        </div>
                    </div>
                </header>
                <section class="dashboard-counts no-padding-bottom">
                    <div class="container-fluid">
                        <div class="row bg-white has-shadow">
                            <div class="col-xl-3 col-sm-6">
                                <div class="item d-flex align-items-center">
                                    <div class="icon bg-violet">
                                        <i class="fal fa-user"></i>
                                    </div>
                                    <div class="title">
                                        <span>Students</span>
                                        <div class="progress">
                                            <div role="progressbar"
                                                 style="width: 25%; height: 4px"
                                                 aria-valuenow="25"
                                                 aria-valuemin="0"
                                                 aria-valuemax="100"
                                                 class="progress-bar bg-violet"></div>
                                        </div>
                                    </div>
                                    <div class="" style="white-space:pre"><strong>@ViewBag.Students</strong></div>
                                </div>
                            </div>
                            <div class="col-xl-3 col-sm-6">
                                <div class="item d-flex align-items-center">
                                    <div class="icon bg-red">
                                        <i class="fal fa-file-user"></i>
                                    </div>
                                    <div class="title">
                                        <span>Professors</span>
                                        <div class="progress">
                                            <div role="progressbar"
                                                 style="width: 5%; height: 4px"
                                                 aria-valuenow="5"
                                                 aria-valuemin="0"
                                                 aria-valuemax="100"
                                                 class="progress-bar bg-red"></div>
                                        </div>
                                    </div>
                                    <div class=""><strong>@ViewBag.Professors</strong></div>
                                </div>
                            </div>
                            <div class="col-xl-3 col-sm-6">
                                <div class="item d-flex align-items-center">
                                    <div class="icon bg-green">
                                        <i class="fal fa-user-chart"></i>
                                    </div>
                                    <div class="title">
                                        <span>Admins</span>
                                        <div class="progress">
                                            <div role="progressbar"
                                                 style="width: 50%; height: 4px"
                                                 aria-valuenow="50"
                                                 aria-valuemin="0"
                                                 aria-valuemax="100"
                                                 class="progress-bar bg-green"></div>
                                        </div>
                                    </div>
                                    <div class=""><strong>@ViewBag.Admins</strong></div>
                                </div>
                            </div>
                            <div class="col-xl-3 col-sm-6">
                                <div class="item d-flex align-items-center">
                                    <div class="icon bg-orange">
                                        <i class="fal fa-file-alt"></i>
                                    </div>
                                    <div class="title">
                                        <span>News</span>
                                        <div class="progress">
                                            <div role="progressbar"
                                                 style="width: 20%; height: 4px"
                                                 aria-valuenow="20"
                                                 aria-valuemin="0"
                                                 aria-valuemax="100"
                                                 class="progress-bar bg-orange"></div>
                                        </div>
                                    </div>
                                    <div class=""><strong>@ViewBag.News</strong></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <section class="dashboard-header">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="statistics col-lg-3 col-12">
                                <div class="statistic d-flex align-items-center bg-white has-shadow">
                                    <div class="icon bg-red"><i class="fal fa-file-spreadsheet"></i></div>
                                    <div class="text">
                                        <strong>@ViewBag.Posts</strong>
                                        <br />
                                        <small>Posts</small>
                                    </div>
                                </div>
                                <div class="statistic d-flex align-items-center bg-white has-shadow">
                                    <div class="icon bg-green">
                                        <i class="fal fa-calendar-week"></i>
                                    </div>
                                    <div class="text">
                                        <strong>@ViewBag.Events</strong>
                                        <br />
                                        <small>Events</small>
                                    </div>
                                </div>
                            </div>
                            <div class="statistics col-lg-3 col-12">
                                <div class="statistic d-flex align-items-center bg-white has-shadow">
                                    <div class="icon bg-red"><i class="fal fa-books"></i></div>
                                    <div class="text">
                                        <strong>@ViewBag.Courses</strong>
                                        <br />
                                        <small>Courses</small>
                                    </div>
                                </div>
                                <div class="statistic d-flex align-items-center bg-white has-shadow">
                                    <div class="icon bg-green">
                                        <i class="fal fa-question"></i>
                                    </div>
                                    <div class="text">
                                        <strong>@ViewBag.Questions</strong>
                                        <br />
                                        <small>Questions</small>
                                    </div>
                                </div>
                            </div>
                            <div class="statistics col-lg-3 col-12">
                                <div class="statistic d-flex align-items-center bg-white has-shadow">
                                    <div class="icon bg-red"><i class="fal fa-chart-bar"></i></div>
                                    <div class="text">
                                        <strong>@ViewBag.Results</strong>
                                        <br />
                                        <small>Studnet's Results</small>
                                    </div>
                                </div>
                                <div class="statistic d-flex align-items-center bg-white has-shadow">
                                    <div class="icon bg-green">
                                        <i class="fal fa-question-square"></i>
                                    </div>
                                    <div class="text">
                                        <strong>@ViewBag.Exams</strong>
                                        <br />
                                        <small> Exams</small>
                                    </div>
                                </div>
                            </div>
                            <div class="statistics col-lg-3 col-12">
                                <div class="statistic d-flex align-items-center bg-white has-shadow">
                                    <div class="icon bg-red"><i class="fal fa-video"></i></div>
                                    <div class="text">
                                        <strong>@ViewBag.Videos</strong>
                                        <br />
                                        <small> Videos</small>
                                    </div>
                                </div>
                                <div class="statistic d-flex align-items-center bg-white has-shadow">
                                    <div class="icon bg-green">
                                        <i class="fal fa-presentation"></i>
                                    </div>
                                    <div class="text">
                                        <strong>@ViewBag.Lectures</strong>
                                        <br />
                                        <small>Lectures</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <footer class="main-footer">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-sm-6">
                                <p>FCI-2022</p>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
    </div>
    <script src="~/Content/Admin/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/Admin/vendor/popper.js/popper.min.js"></script>
    <script src="~/Content/Admin/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/Admin/js/front.js"></script>
</body>
</html>
