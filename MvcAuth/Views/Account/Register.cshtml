@using MvcAuth.Models
@model MvcAuth.Models.RegisterViewModel2
@{
    ViewBag.Title = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>FCI | Register</title>
    <meta name="description" content="" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="robots" content="all,follow" />

    <link rel="stylesheet" href="~/Content/Admin/vendor/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/Admin/vendor/font-awesome/css/all.min.css" />

    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Poppins:300,400,700" />
    <link rel="stylesheet" href="~/Content/Admin/css/style.css" id="theme-stylesheet" />
    <link rel="shortcut icon" href="~/Content/Admin/img/favicon.ico" />
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/bootstrap")
    }
</head>
<body>
    <div class="page login-page">
        <div class="container d-flex align-items-center">
            <div class="form-holder has-shadow">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="info d-flex align-items-center">
                            <div class="content">
                                <div class="logo">
                                    <a href="@Url.Action("Index","Home")" class="text-white"> <h1>KFS University</h1></a>
                                </div>
                                <p>Learn what want anywhere, anytime.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 bg-white">
                        <div class="form d-flex align-items-center">
                            <div class="content">
                                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))

                                {
                                    @Html.AntiForgeryToken()


                                    <div class="form-group">

                                        <div class="col-md-10">
                                            @Html.TextBoxFor(m => m.Name, new { @class = "input-material", @id = "register-username" })
                                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                                            <label for="register-username" class="label-material">User Name</label>
                                        </div>
                                    </div>

                                    <div class="form-group">

                                        <div class="col-md-10">
                                            @Html.TextBoxFor(m => m.Email, new { @class = "input-material", @id = "register-email" })
                                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                            <label for="register-email" class="label-material">
                                                Email Address
                                            </label>
                                        </div>
                                    </div>
                                    <div class="form-group">

                                        <div class="col-md-10">
                                            @Html.DropDownList("Type", ViewBag.role as SelectList, new { @class = "form-control" })
                                        </div>
                                    </div>

                                    <div class="form-group">

                                        <div class="col-md-10">
                                            @Html.PasswordFor(m => m.Pass, new { @class = "input-material", @id = "register-password" })
                                            @Html.ValidationMessageFor(m => m.Pass, "", new { @class = "text-danger" })
                                            <label for="register-password" class="label-material">
                                                password
                                            </label>
                                        </div>
                                    </div>
                                    <div class="form-group">

                                        <div class="col-md-10">
                                            @Html.PasswordFor(m => m.ComparePass, new { @class = "input-material", @id = "confirm-password" })
                                            @Html.ValidationMessageFor(m => m.ComparePass, "", new { @class = "text-danger" })
                                            <label for="confirm-password" class="label-material">
                                                Confirm Password
                                            </label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Image", new { @class = "col-md-2 control-label" })
                                        <div class="col-md-10">

                                            <input type="file" name="ImageData" id="ImageData" onchange="fileCheck(this);" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" class="btn btn-default" value="Register" onchange="fileCheck(this);" />
                                        </div>
                                    </div>
                                }


                                <small>Already have an account? </small><a href="Login" class="signup">Login</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <script src="~/Content/Admin/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/Admin/vendor/popper.js/popper.min.js"></script>
    <script src="~/Content/Admin/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/Admin/js/front.js"></script>
    <script src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
