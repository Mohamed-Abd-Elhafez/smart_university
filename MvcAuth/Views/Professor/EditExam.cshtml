@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>FCI | Lectures</title>
    <meta name="description" content="" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="robots" content="all,follow" />
    <link rel="stylesheet" href="~/Content/Admin/vendor/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/Admin/vendor/font-awesome/css/all.min.css" />
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Poppins:300,400,700" />
    <link rel="stylesheet" href="~/Content/Admin/css/style.css" id="theme-stylesheet" />
    <link rel="shortcut icon" href="img/favicon.ico" />
</head>
<body>
    <div class="page">
        <div class="page-content d-flex align-items-stretch">
            <nav class="side-navbar">
                <div class="sidebar-header d-flex align-items-center">
                    <div class="avatar">

                        <img src="@Url.Action("RenderImage","Professor")"
                             alt="thumbnail"
                             class="img-fluid rounded-circle" />
                    </div>
                    <div class="title">
                        <h1 class="h4">
                            @Session["ProfessorName"]
                        </h1>
                        <p>
                            Professor
                            <br />
                        </p>
                    </div>
                </div>
                <span class="heading">Main</span>
                <ul class="list-unstyled">
                    <li>
                        <a href="@Url.Action("Navigation","Professor")"> <i class="fad fa-home"></i>Home</a>
                    </li>
                    <li>
                        <a href="@Url.Action("FileUpload","Professor")"> <i class="fad fa-presentation"></i>Lectures</a>
                    </li>
                    <li>
                        <a href="@Url.Action("UploadVideo","Professor")"> <i class="fas fa-video"></i>Videos</a>
                    </li>
                    <li>
                        <a href="@Url.Action("ActionQrCode","Admin")"><i class="fad fa-qrcode"></i>QR Code</a>
                    </li>
                    <li class="active">
                        <a href="@Url.Action("ExamManagment","Professor")"> <i class="fas fa-graduation-cap"></i>Exams</a>
                    </li>
                    <li>
                        <a href="@Url.Action("QuestionsManagment","Professor")"> <i class="fas fa-graduation-cap"></i>Questions</a>
                    </li>
                    <li>
                        <a href="@Url.Action("CourseStudents","Professor")"> <i class="fas fa-user-graduate"></i>Students Courses</a>
                    </li>
                    <li>
                        <a href="@Url.Action("ApproveCourses","Professor")"> <i class="fas fa-thumbs-up"></i>Approve requests</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Chat")"> <i class="fad fa-comments-alt"></i>Chat</a>
                    </li>
                </ul>



            </nav>

            <div class="content-inner">
                <header class="page-header bg-dark">
                    <div class="container-fluid">
                        <div class="d-flex align-items-center">
                            <a id="toggle-btn" href="@Url.Action("Navigation")" class="menu-btn active">
                                <span></span><span></span><span></span>
                            </a>

                            <a href="@Url.Action("Navigation")"
                               class="navbar-brand d-none d-sm-inline-block text-white">
                                <div class="brand-text d-none d-lg-inline-block">
                                    <span>KFS</span><strong>University</strong>
                                </div>
                                <div class="brand-text d-none d-sm-inline-block d-lg-none">
                                    <strong>FCI</strong>
                                </div>
                            </a>

                            <a href="@Url.Action("LogOff","Account")" class="nav-link ml-auto logout text-light">
                                <span class="d-none d-sm-inline">Logout</span><i class="fad fa-sign-out"></i>
                            </a>
                        </div>
                    </div>
                </header>
                <header class="page-header">
                    <div class="container-fluid">
                        <h2 class="no-margin-bottom">Edit exam</h2>
                    </div>
                </header>

                <section>
                    <div class="row d-flex justify-content-center">
                        <div class="col-6">

                          @model MvcAuth.Models.ExamTbl






@using (Html.BeginForm("EditExam", "Professor", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model=>model.Ex_ID)
                        <div class="form-horizontal">
                            @if (ViewBag.msg != null)
                            {
                                <h2 class="text-danger">@ViewBag.msg</h2>
                            }
                           
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <label class="form-control-label">Exam name</label>
                          
                                    @Html.EditorFor(model => model.Ex_Name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Ex_Name, "", new { @class = "text-danger" })
                            
                            </div>
                            <div class="form-group">
                                <label class="form-control-label">Course id</label>
                            
                                    @Html.DropDownListFor(model => model.Course_ID, ViewBag.Courses as SelectList, "Select Course Name",new { @class = "form-control" } )
                                    @Html.ValidationMessageFor(model => model.Course_ID, "", new { @class = "text-danger" })
                               
                            </div>
                            <div class="form-group">
                                <label class="form-control-label">Model info</label>
                              
                                    @Html.EditorFor(model => model.Ex_Info, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Ex_Info, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                <label class="form-control-label">Total degrees</label>
                              
                                    @Html.EditorFor(model => model.Ex_Total, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Ex_Total, "", new { @class = "text-danger" })
                             
                            </div>

                            <div class="form-group">
                                <label class="form-control-label">Exam duration</label>
                                
                                    @Html.EditorFor(model => model.Ex_Munite_Duration, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Ex_Munite_Duration, "", new { @class = "text-danger" })
                             
                            </div>

                            <div class="form-group">
                                <label class="form-control-label">Passing mark</label>
                                
                                    @Html.EditorFor(model => model.Ex_Passing_Mark, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Ex_Passing_Mark, "", new { @class = "text-danger" })
                              
                            </div>

                            <div class="form-group">
                                <label class="form-control-label">Start on</label>
                               
                                    @Html.EditorFor(model => model.Ex_Start_On, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Ex_Start_On, "", new { @class = "text-danger" })
                            
                            </div>

                            <div class="form-group">
                                <label class="form-control-label">End on</label>
                               
                                    @Html.EditorFor(model => model.Ex_End_On, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Ex_End_On, "", new { @class = "text-danger" })
                              
                            </div>

                            <div class="form-group">
                              
                                    <label class="form-control-label">Student status</label>
                             
                               
                                    @Html.DropDownListFor(model => model.IsShow, new List<SelectListItem>
                                   {
                                       new SelectListItem{Text ="Show" , Value = true.ToString() },
                                       new SelectListItem{Text ="Hide" , Value = false.ToString() }
                                   }, "Seclect Status",new { @class = "form-control" } )
                                    @Html.ValidationMessage("IsShow", "", new { @class = "text-danger" })
                              
                            </div>

                            <div class="form-group d-flex justify-content-center">
                                <input type="submit" value="Save" class="btn btn-primary px-4" />
                       
                        </div>
</div>
}


                        </div>
                    </div>
                </section>

                <footer class="main-footer">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-sm-6">
                                <p>F2022</p>
                            </div>
                            <div class="col-sm-6 text-right">
                                <p>


                                </p>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
    </div>
    <script src="~/Content/Admin/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/Admin/vendor/popper.js/popper.min.js"></script>
    <script src="~/Content/Admin/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/Admin/js/front.js"></script>
    <script src="~/Content/Admin/js/charts-home.js"></script>
    <script src="~/Content/Admin/vendor/chart.js/Chart.min.js"></script>


</body>
</html>
